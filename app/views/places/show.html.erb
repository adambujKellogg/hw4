<h1>Place: <%= @place["name"] %></h1>


<% if @current_user %>
<h2>My Posts --</h2>
<% for post in @posts %>
  <h5><%= post["title"] %></h5>
  <p><%= post["posted_on"] %></p>
  <p><%= post["description"] %></p>
  <img class="img-fluid" src="<%= post["uploaded_image"] %>" class="w-full">


<% end %>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>
<% else %>
  Please log in to view and add posts
<% end %>
<p>
  <a href="/places">Back to All Places</a>
</p>


